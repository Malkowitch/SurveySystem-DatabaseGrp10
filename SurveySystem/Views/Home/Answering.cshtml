@model SurveySystem.Models.Survey
@{
    ViewBag.Title = "Answering";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Answering for @Model.SurveyTitle</h2>
@using (Html.BeginForm())
{
    <input type="hidden" value="2" name="participantId" />
    foreach (var item in Model.Question)
    {
        if (item.InputId == 1)
        {
        <label>@item.QuestionText</label>
        <p><input type="text" name="answerText" /></p>
        <input type="hidden" value="@item.QuestionId" name="questionId" />
        }
    }
    <br /><br />
<input type="submit" name="Answer" value="Send in answers" />
}